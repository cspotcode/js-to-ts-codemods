{
    "extends": "@tsconfig/node14/tsconfig.json",
    "include": ["src"],
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "incremental": true,
        "declarationMap": true,
        "module": "ESNext",
        "esModuleInterop": true,
        "moduleResolution": "node",
    },
    "ts-node": {
        // "swc": true,
        "transpileOnly": true,
        "moduleTypes": {
            "src/transforms/**": "cjs",
            "src/helpers.ts": "cjs"
        }
    }
}
